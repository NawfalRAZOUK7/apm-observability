              "key": "limit",
              "value": "10"
            },
            {
              "key": "sort_by",
              "value": "hits"
            },
            {
              "key": "direction",
              "value": "desc"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Has source + results array', function () {",
              "  const j = pm.response.json();",
              "  pm.expect(j).to.have.property('source');",
              "  pm.expect(j).to.have.property('results');",
              "  pm.expect(j.results).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
