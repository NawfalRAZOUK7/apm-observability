    },
    {
      "name": "Top Endpoints \u2014 by hits (desc)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/requests/top-endpoints/?limit=10&sort_by=hits&direction=desc",
