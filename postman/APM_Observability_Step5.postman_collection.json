{
  "info": {
    "_postman_id": "f3b1d1b8-8c8f-4b7a-a2a1-7e8a9d7c5a51",
    "name": "APM Observability — Step 5 (KPIs + Top Endpoints)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Step 5 manual tests for /api/requests/kpis/ and /api/requests/top-endpoints/. Set collection variable base_url then run."
  },
  "item": [
    {
      "name": "KPIs — default",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/requests/kpis/",
          "host": ["{{base_url}}"],
          "path": ["api", "requests", "kpis", ""]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Has KPI keys', function () {",
              "  const j = pm.response.json();",
              "  pm.expect(j).to.have.property('hits');",
              "  pm.expect(j).to.have.property('errors');",
              "  pm.expect(j).to.have.property('error_rate');",
              "  pm.expect(j).to.have.property('avg_latency_ms');",
              "  pm.expect(j).to.have.property('p95_latency_ms');",
              "  pm.expect(j).to.have.property('max_latency_ms');",
              "  pm.expect(j).to.have.property('source');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "KPIs — filtered by service",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/requests/kpis/?service=svc-a",
          "host": ["{{base_url}}"],
          "path": ["api", "requests", "kpis", ""],
          "query": [
            { "key": "service", "value": "svc-a" }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Has source', function () {",
              "  const j = pm.response.json();",
              "  pm.expect(j).to.have.property('source');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Top Endpoints — by hits (desc)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/requests/top-endpoints/?limit=10&sort_by=hits&direction=desc",
          "host": ["{{base_url}}"],
          "path": ["api", "requests", "top-endpoints", ""],
          "query": [
            { "key": "limit", "value": "10" },
            { "key": "sort_by", "value": "hits" },
            { "key": "direction", "value": "desc" }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Has source + results array', function () {",
              "  const j = pm.response.json();",
              "  pm.expect(j).to.have.property('source');",
              "  pm.expect(j).to.have.property('results');",
              "  pm.expect(j.results).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Top Endpoints — by error_rate (desc)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/requests/top-endpoints/?limit=10&sort_by=error_rate&direction=desc",
          "host": ["{{base_url}}"],
          "path": ["api", "requests", "top-endpoints", ""],
          "query": [
            { "key": "limit", "value": "10" },
            { "key": "sort_by", "value": "error_rate" },
            { "key": "direction", "value": "desc" }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Has source + results array', function () {",
              "  const j = pm.response.json();",
              "  pm.expect(j).to.have.property('source');",
              "  pm.expect(j).to.have.property('results');",
              "  pm.expect(j.results).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    }
  ]
}
