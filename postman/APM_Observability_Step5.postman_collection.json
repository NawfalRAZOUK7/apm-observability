{
  "info": {
    "_postman_id": "f3b1d1b8-8c8f-4b7a-a2a1-7e8a9d7c5a51",
    "name": "APM Observability \u2014 Step 5 (KPIs + Top Endpoints)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Step 5 manual tests for /api/requests/kpis/ and /api/requests/top-endpoints/. Set collection variable base_url then run."
  },
  "item": [
    {
      "name": "KPIs \u2014 default",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/requests/kpis/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "requests",
            "kpis",
            ""
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test('Has KPI keys', function () {",
              "  const j = pm.response.json();",
              "  pm.expect(j).to.have.property('hits');",
              "  pm.expect(j).to.have.property('errors');",
              "  pm.expect(j).to.have.property('error_rate');",
              "  pm.expect(j).to.have.property('avg_latency_ms');",
              "  pm.expect(j).to.have.property('p95_latency_ms');",
              "  pm.expect(j).to.have.property('max_latency_ms');",
              "  pm.expect(j).to.have.property('source');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "KPIs \u2014 filtered by service",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/requests/kpis/?service=svc-a",
